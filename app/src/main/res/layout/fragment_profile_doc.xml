<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.ananya.careapp.ProfileDoc">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/doctor11">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardCornerRadius="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="120dip"
                android:src="@drawable/sampleprofile"
                android:layout_height="120dip"
                android:id="@+id/docprofcircleimage"
                android:background="@drawable/roundimage"
                android:layout_gravity="center_horizontal"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="120dip"
                android:src="@drawable/sampleprofile"
                android:layout_height="120dip"
                android:visibility="gone"
                android:id="@+id/docprofcircleimage1"
                android:background="@drawable/roundimage"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dip"
                android:layout_marginTop="100dip"
                android:id="@+id/docprofedit"
                android:visibility="gone"
                android:background="@drawable/pencil"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:text="Edit"
                android:id="@+id/docprofilesave"
                android:layout_gravity="right"
                android:textColor="#255fda"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#034951"
                android:layout_margin="10dp"
                android:layout_gravity="left"
                android:text="Name"/>
            <EditText
                android:id="@+id/editdocprofname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:visibility="gone"
                android:layout_gravity="right"
                android:inputType="textPersonName"
                android:hint="e.g. DR. Suresh" />
            <TextView
                android:id="@+id/docprofname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="18dp"
                android:textAlignment="viewEnd"
                android:layout_margin="10dp"
                android:layout_gravity="right"
                 />
        </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#034951"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    android:text="Age"/>
                <EditText
                    android:id="@+id/editdocprofage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:visibility="gone"
                    android:layout_gravity="right"
                    android:inputType="textPersonName"
                    android:hint="e.g. 20" />
                <TextView
                    android:id="@+id/docprofage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textAlignment="viewEnd"
                    android:textSize="18dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="right"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dosage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#034951"
                    android:textSize="18sp"
                    android:text="Gender"
                    android:layout_margin="10dp"
                    android:layout_weight="0.8" />
                <TextView
                    android:id="@+id/docprofgender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="18sp"
                    android:textAlignment="viewEnd"
                    android:layout_weight="0.4"
                    android:layout_margin="10dp"

                     />
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:visibility="gone"
                    android:id="@+id/docprofgenderspin"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:entries="@array/gender"
                    />
            </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#034951"
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:ems="10"
                android:text="Specialization" />
                <TextView
                    android:id="@+id/docprofspec"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="false"
                    android:textSize="18dp"
                    android:layout_margin="10dp"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="right"
                     />
            <Spinner
                android:layout_width="200dp"
                android:layout_gravity="right"
                android:id="@+id/docprofilespecspin"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:entries="@array/doctortypes"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#034951"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:layout_gravity="left"
                android:ems="10"
                android:text="Hospital" />
                <TextView
                    android:id="@+id/docprofhos"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="18sp"
                    android:textAlignment="viewEnd"
                    android:focusable="false"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    />
            <Spinner
                android:layout_width="200dp"
                android:id="@+id/docprofilehosspin"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#034951"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:layout_gravity="left"
                    android:ems="10"
                    android:text="City" />
                <TextView
                    android:id="@+id/docprofcity"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    />
                <Spinner
                    android:layout_width="200dp"
                    android:id="@+id/docprofilecityspin"
                    android:layout_gravity="right"
                    android:entries="@array/Cities"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#034951"
                    android:layout_margin="10dp"
                    android:layout_gravity="left"
                    android:text="Mobile No."/>
                <TextView
                    android:id="@+id/docprofmobile"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="18sp"
                    android:textAlignment="viewEnd"
                    android:focusable="false"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    />

                <EditText
                    android:id="@+id/editdocprofilemob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:visibility="gone"
                    android:layout_gravity="right"
                    android:inputType="textPersonName"
                    android:hint="e.g. DR. Suresh" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
