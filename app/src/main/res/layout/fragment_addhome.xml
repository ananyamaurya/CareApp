<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a4f0ff"
    tools:context="com.example.ananya.careapp.Addhome">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:id="@+id/relativePager3">
        <android.support.v4.view.ViewPager
            android:id="@+id/pager3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true" />
        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_below="@id/relativePager3"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a4f0ff"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5">
    <android.support.v7.widget.CardView
        android:id="@+id/hoscard"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:layout_margin="10dp"
        android:elevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/hostpitaltile"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="Hospital"
            android:textAlignment="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:id="@+id/doccard"
        android:layout_margin="10dp"
        android:elevation="2dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/doctile"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Doctor"
            android:textAlignment="center"
            android:focusable="false"
            android:id="@+id/editText" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5">
    <android.support.v7.widget.CardView
        android:id="@+id/attcard"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/supporttile"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Attendant"
            android:textAlignment="center"
            android:focusable="false"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/patcard"
        android:layout_weight="0.5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/patienttile"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Patient"
            android:textAlignment="center"
            android:focusable="false"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>
