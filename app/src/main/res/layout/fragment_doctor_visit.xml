<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#a4f0ff"
    tools:context="com.example.ananya.careapp.DoctorVisit">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/listresourceback">
            <EditText
                android:layout_width="100dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:id="@+id/docvpid"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:hint="Fetch By Patient ID"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/docvsub"
                android:background="@drawable/roundimage"
                android:drawableTint="@color/colorPrimaryDark"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.3"
                android:text="Fetch"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/medicalhistory_recyclerView">

    </android.support.v7.widget.RecyclerView>


</FrameLayout>
