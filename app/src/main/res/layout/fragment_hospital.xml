    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hospital1"
        android:background="@drawable/roundimage"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textColor="#000000"
            android:textSize="25sp"
            android:ems="10"
            android:textAlignment="center"
            android:text="Name" />
        <EditText
            android:id="@+id/hosname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:hint="Hospital Name" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="City" />
        <EditText
            android:id="@+id/hoscity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:inputType="text"
            android:hint="Hospital City" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="Address" />
        <EditText
            android:id="@+id/hosaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:inputType="textPostalAddress"
            android:hint="221, Baker Street" />
        <Button
            android:id="@+id/btnaddhospital"
            android:layout_width="match_parent"
            android:text="Submit"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hospital2"
        android:orientation="vertical">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="#1babc7">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="@string/hospital_view"
            android:textColor="#ffff"
            android:background="@color/transparent"
            android:id="@+id/hospitaladd"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="@string/hospital_delete"
            android:background="@color/transparent"
            android:textColor="#ffff"
            android:id="@+id/hospitalview"
            />
    </LinearLayout>
</FrameLayout>
