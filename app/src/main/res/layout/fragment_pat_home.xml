<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a4f0ff"
    tools:context="com.example.ananya.careapp.PatHome">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoStart="true"
        android:layout_alignParentTop="true"
        android:flipInterval="1000"
        android:id="@+id/pathomeFlipper">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="185dip"
            android:src="@drawable/doc1" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="185dip"
            android:src="@drawable/doc"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="185dip"
            android:src="@drawable/dc"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="185dip"
            android:src="@drawable/dc3"
            />
    </ViewFlipper>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@id/pathomeFlipper"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#a4f0ff"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.5">
                <android.support.v7.widget.CardView
                    android:id="@+id/patappointment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_margin="10dp"
                    android:elevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/patientqueue"/>
                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:text="Appointment"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/patfinddoc"
                    android:layout_margin="10dp"
                    android:elevation="2dp" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/doctile"/>
                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Find Doctor"
                            android:textAlignment="center"
                            android:focusable="false" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.5">
                <android.support.v7.widget.CardView
                    android:id="@+id/patfindhos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/hostpitaltile"/>
                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Find Hospital"
                            android:textAlignment="center"
                            android:focusable="false"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/patmedhis"
                    android:layout_weight="0.5">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/patientdetails"/>
                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Medical History"
                            android:textAlignment="center"
                            android:focusable="false"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
